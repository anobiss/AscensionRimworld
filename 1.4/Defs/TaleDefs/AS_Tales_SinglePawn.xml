<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TaleDef>
    <defName>AS_FoundationBreakthrough</defName>
    <label>foundation breakthrough</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>2</baseInterest>
    <rulePack>
      <rulesStrings>        
	    <li>tale_noun->[PAWN_nameDef]'s ascendant foundation breakthrough</li>
        <li>image->[PAWN_nameFull] [breakthrough_gerund] ascendant foundation [circumstance_group]</li>
        <li>eat_gerund->made a breakthrough into</li>
        <li>eat_gerund->achieved a</li>
        <li>eat_gerund->cultivated a</li>
        <li>circumstance_phrase->with a sense of purpose</li>
		<li>circumstance_phrase->while holding back tears</li>
        <li>circumstance_phrase->while the heavens protested with lightning</li>
        <li>circumstance_phrase->with relative ease</li>
        <li>circumstance_phrase->while others look on</li>
        <li>desc_sentence->[PAWN_nameDef] is seen hovering above the ground while meditating.</li>
        <li>desc_sentence->Lightning is seen striking [PAWN_nameDef]'s body.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>AS_PImmortalBreakthrough</defName>
    <label>psuedo immortality breakthrough</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>        
	    <li>tale_noun->[PAWN_nameDef]'s psuedo-immortality breakthrough</li>
        <li>image->[PAWN_nameFull] [breakthrough_gerund] psuedo-immortality [circumstance_group]</li>
        <li>eat_gerund->made a breakthrough into</li>
        <li>eat_gerund->ascended to</li>
        <li>eat_gerund->achieved</li>
        <li>eat_gerund->cultivated</li>
        <li>circumstance_phrase->with a sense of purpose</li>
		<li>circumstance_phrase->while holding back tears</li>
        <li>circumstance_phrase->while the heavens protested with lightning</li>
        <li>circumstance_phrase->with relative ease</li>
        <li>circumstance_phrase->while others look on</li>
        <li>desc_sentence->[PAWN_nameDef] is seen hovering above the ground while meditating.</li>
        <li>desc_sentence->Lightning is seen striking [PAWN_nameDef]'s body.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
</Defs>