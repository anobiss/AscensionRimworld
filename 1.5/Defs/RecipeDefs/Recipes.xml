  <RecipeDef>
    <defName>RefineIceEssence</defName>
    <label>smelt ice essence bars from ore</label>
    <description>Use heat and Qi to extract a bar of ice essence from its ore.</description>
    <jobString>Smelting ice essence bars.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <researchPrerequisite>EssenceRefinement</researchPrerequisite>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
	<recipeUsers>
      <li>SpiritCauldron</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>IceEssenceOre</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <products>
      <IceEssenceBar>1</IceEssenceBar>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>IceEssenceOre</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

