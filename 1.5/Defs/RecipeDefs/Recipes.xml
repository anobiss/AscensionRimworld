  <RecipeDef>
    <defName>Make_SpiritStonesFromOrganics</defName>
    <label>make spirit stones from organics</label>
    <description>Make spirit stones by extracting qi from organic feedstocks.</description>
	<researchPrerequisite>QiManipulation</researchPrerequisite>
    <jobString>Manifesting spirit stones from organics.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>5000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
	<recipeUsers>
      <li>SpiritCauldron</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <customSummary>feedstock</customSummary>
          <categories>
            <li>Foods</li>
            <li>PlantMatter</li>
          </categories>
          <disallowedThingDefs>
            <li>Hay</li>
          </disallowedThingDefs>
          <disallowedCategories>
            <li>FoodMeals</li>
          </disallowedCategories>
        </filter>
        <count>7</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Foods</li>
        <li>PlantMatter</li>
      </categories>
      <disallowedThingDefs>
        <li>Hay</li>
      </disallowedThingDefs>
      <disallowedCategories>
        <li>FoodMeals</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <disallowedCategories>
        <li>AnimalProductRaw</li>
      </disallowedCategories>
    </defaultIngredientFilter>
    <products>
      <SpiritStone>2</SpiritStone>
    </products>
  </RecipeDef>
  
</Defs>