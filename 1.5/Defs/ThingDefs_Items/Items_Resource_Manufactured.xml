<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>LuminaCore</defName>
    <label>lumina core</label>
    <description>The essence of a rare meteorite. Its rare special physical properties make it very valuable.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Spiritwood</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>1000</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.4</Mass> 
      <Flammability>0.0</Flammability>
      <DeteriorationRate>0.1</DeteriorationRate>
    </statBases>
    <burnableByRecipe>false</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>3</minRewardCount>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <allowedArchonexusCount>50</allowedArchonexusCount>
	<comps>
	   <li Class="Ascension.CompProperties_GatherQi">
		<range>2</range>
        <amount>35</amount>
      </li>
	  <li Class="Ascension.CompProperties_ElementEmit">
		<range>4</range>
        <amount>12</amount>
		<element>Metal</element>
      </li>
    </comps>
  </ThingDef>

