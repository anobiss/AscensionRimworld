  <ThingDef ParentName="ResourceBase">
    <defName>BasicQiScroll</defName>
    <label>Basic Qi Arts Scroll</label>
    <description>A basic Qi Arts scroll, capable of teaching those with the foundation establisment essence realm or higher: Qi Shoot and Qi Heal abilities.</description>
    <graphicData>
      <texPath>Things/Item/Misc/BasicQiScroll</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>12</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>12</MaxHitPoints>
      <MarketValue>555</MarketValue>
      <Mass>0.8</Mass>
      <Flammability>0.0</Flammability>
      <DeteriorationRate>0.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
	<tradeability>None</tradeability>
	<comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use {0_label}</useLabel><!-- text_todo -->
        <useDuration>0</useDuration>
        <warmupMote>Mote_QiMistStencil</warmupMote>
      </li>
      <li Class="Ascension.CompProperties_UseEffect_AbilityScroll"><!-- abilities are defined in the hediff comps -->
		<scrollHediffDef>BasicQiArts</scrollHediffDef>
      </li>
    </comps>
	<allowedArchonexusCount>100</allowedArchonexusCount>
  </ThingDef>

