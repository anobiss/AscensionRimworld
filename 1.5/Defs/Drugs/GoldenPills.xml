<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="DrugPillBase">
    <defName>GoldenPill</defName>
    <label>Golden pill</label>
    <description>A golden pill that can be used to gain large amounts of Qi quickly. The amount of Qi granted scales with quality. Grants betweem 50-500 Qi.</description>
    <graphicData>
      <texPath>Things/Item/Drug/GoldenPill</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <MarketValue>900.9</MarketValue>
      <Mass>0.03</Mass>
    </statBases>
    <techLevel>Ultra</techLevel>
    <minRewardCount>5</minRewardCount>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="Ascension.IngestionOutcomeDoer_GoldenPill">
          <amount>100</amount>
        </li>
      </outcomeDoers>
    </ingestible>
	<comps>
      <li Class="Ascension.CompProperties_GoldenPill">
		<amount>100</amount>
      </li>
      <li Class="CompProperties_Drug">
		<isCombatEnhancingDrug>false</isCombatEnhancingDrug>
        <listOrder>1010</listOrder>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
	</comps>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags><li>RewardStandardHighFreq</li></thingSetMakerTags>
    <allowedArchonexusCount>3</allowedArchonexusCount>
  </ThingDef>

